{
  "name": "unified-peoplesoft-automation",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n server,client -c cyan,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/start.ts",
    "dev:client": "vite",
    "build": "tsc -b && vite build",
    "start": "tsx src/server/start.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "install-browser": "npx playwright install msedge"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "cheerio": "^1.0.0",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "framer-motion": "^11.15.0",
    "oracledb": "^6.10.0",
    "playwright": "^1.50.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/oracledb": "^6.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-dom": "^2.7.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-react-x": "^2.7.1",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
